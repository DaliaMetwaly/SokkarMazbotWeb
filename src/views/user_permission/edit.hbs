<!DOCTYPE html>
<html lang="ar">

{{> head}}

<body>

<div id="wrapper">

    {{> navbar}}

    {{> sidenav}}

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Edit Permission</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        {{# if errors }}
            {{# each errors }}
                <p class="alert alert-danger">{{ this.msg }}</p>
            {{/each}}
        {{/if}}
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Permission Elements
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <form role="form" action="/user_permission/edit/{{user_permission.id }}" method="post" >
                                <div class="form-group">
                                    <label> Permission Title</label>
                                    <input class="form-control" name="title"  id="title" value="{{user_permission.title }}" required >
                                </div>

                                <div class="form-group">
                                    <label> Description</label>
                                    <textarea class="form-control" rows="3" name="shortDescription" id="description">{{user_permission.shortDescription }}</textarea>
                                </div>

                                <button type="submit"  class="btn btn-success">Submit</button>
                                <button type="reset" class="btn btn-danger">cancel</button>
                                </form>
                                <!--                                </form>-->
                            </div>
                            <!-- /.col-lg-6 (nested) -->

                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
    {{> scripts}}

</div>
</body>

</html>
