<!DOCTYPE html>
<html lang="ar">

{{> head}}

<body>

    <div id="wrapper">

        {{> navbar}}

        {{> sidenav}}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header" style="float: right;">Users Permission</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>

            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12" style="direction: rtl;float:right">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <button type="button" id="addbtn" class="btn btn-success" style="margin-bottom:2% ;">Add</button>
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped" id='viewtable'>
                                    <thead>
                                        <tr>
                                             <th style="text-align: right;">
                                           Title
                                            </th>
                                            <th style="text-align: right;">
                                                short Description
                                            </th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>


                                            {{# if user_Permission }}
                                                {{# each user_Permission }}
                                                    <tr>
                                                    <td>{{ this.title }}</td>
                                                    <td>{{ this.shortDescription }}</td>
                                                    <td><a href=" {{this.url}}user_permission/edit?id={{this._id}} "> <button type='button' class='btn btn-primary'>Edit</button></a>
                                                        <button type='button' class='btn btn-danger' data-id="{{this._id}}" onclick=sendData(this) >Delete</button></td>
                                                    </tr>
                                                {{/each}}

                                            {{/if}}



                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" >
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="float: left;">&times;</button>
                    <h4 class="modal-title" id="myModalLabel" style="float: right;">حذف</h4>
                </div>
                <div class="modal-body" style="direction: rtl;">
                    <input id="hiddenId" type="hidden"/>
                    هل انت متأكد من الحذف؟
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">الغاء</button>
                    <button type="button" id="deleteBtn" class="btn btn-primary">تأكيد</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
    <!-- /#wrapper -->
    {{> scripts}}
    <script src="/dist/js/api/request.js"></script>
 <script>



  $('#addbtn').click(function(){
   window.location.href = localApiUrl+"user_permission/add";
  });

     $('#deleteBtn').click(function(){

         deleteTableRow('user_permission/delete/',$("#hiddenId").val(),'userpermission');
         $("#myModal").modal("toggle");
     });
 </script>

</body>

</html>
